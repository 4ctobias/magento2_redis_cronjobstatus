<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="system" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
            <label>system</label>
            <tab>cron</tab>
            <resource>CCCC_RediCronJobStatus::config_cccc_redicronjobstatus</resource>
            <group id="cron_redis" sortOrder="30" showInWebsite="0" showInStore="0" showInDefault="1" translate="label">
                <label>Cron (Monitoring)</label>
                <field id="connection_string" type="text" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
                    <label>Connection-URL</label>
                    <comment>Can be either tcp://&lt;IP-Address&gt;:&lt;Port&gt; or unix://&lt;Socket-path) - eg: tcp://10.0.0.1:6379 or unix://var/lib/redis.sock</comment>
                </field>
                <field id="database" type="text" sortOrder="20" showInWebsite="0" showInStore="0" showInDefault="1" translate="label">
                    <label>Field</label>
                    <comment>Database to use</comment>
                </field>
            </group>
        </section>
    </system>
</config>